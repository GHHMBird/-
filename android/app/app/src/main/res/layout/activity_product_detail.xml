<?xml version="1.0" encoding="utf-8"?>
<finan.heng.com.apps.utils.SlidingFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_e5" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_main"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/activity_product_detail_isshow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_product_detail_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:text="买买买！有钱就要买买买"
                            android:textColor="@color/color_999999"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center|bottom">

                                <TextView
                                    android:id="@+id/activity_product_detail_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="10"
                                    android:textColor="@color/text_Fc291d"
                                    android:textSize="25sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="%"
                                    android:textColor="@color/text_Fc291d"
                                    android:textSize="13sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center|bottom">

                                <TextView
                                    android:id="@+id/activity_product_detail_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="36"
                                    android:textColor="@color/color_333333"
                                    android:textSize="25sp" />

                                <TextView
                                    android:id="@+id/activity_product_detail_time_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="个月"
                                    android:textColor="@color/color_333333"
                                    android:textSize="13sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center|bottom">

                                <TextView
                                    android:id="@+id/activity_product_detail_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="10000"
                                    android:textColor="@color/color_333333"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/activity_pda_wan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="万"
                                    android:textColor="@color/color_333333"
                                    android:textSize="13sp" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="预期年化收益率"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="期限"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="项目总额"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/activity_product_detail_tv_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp" />

                        <finan.heng.com.apps.utils.MySeekBar
                            android:id="@+id/activity_product_detail_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:maxHeight="3.0dip"
                            android:minHeight="3.0dip"
                            android:progressDrawable="@drawable/pbar_strle"
                            android:thumb="@drawable/thumb" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/activity_product_detail_qitou"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="来啊互相伤害啊"
                                android:layout_marginLeft="25dp"
                                android:layout_weight="1"
                                android:textColor="@color/color_999999"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/activity_product_detail_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="小子，放学别走"
                                android:layout_marginRight="25dp"
                                android:textColor="@color/color_999999"
                                android:textSize="13sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="起息时间"
                            android:textColor="@color/color_333333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/activity_product_detail_qixishijian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="一千年以后"
                            android:textColor="@color/color_666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/activity_product_detail_tv_isshow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="展开"
                            android:textColor="@color/color_5aa0ff"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/activity_product_detail_iv_isshow"
                            android:layout_width="@dimen/divide_20_dp"
                            android:layout_height="@dimen/divide_20_dp"
                            android:layout_marginRight="15dp"
                            android:src="@mipmap/right"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity_product_detail_ll_isshow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bg_main" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="起息方式"
                                android:textColor="@color/color_333333"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/activity_product_detail_jiekuanfangshi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="抢银行呐"
                                android:textColor="@color/color_666"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bg_main" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="募集时间"
                                android:textColor="@color/color_333333"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/activity_product_detail_mujishijian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="很久很久哦"
                                android:textColor="@color/color_666"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bg_main" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="还款方式"
                                android:textColor="@color/color_333333"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/activity_product_detail_huankuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="要钱没有，要命一条"
                                android:textColor="@color/color_666"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <android.support.design.widget.TabLayout
                    android:id="@+id/activity_product_detail_tab"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    app:tabIndicatorColor="@color/text_Fc291d"
                    app:tabSelectedTextColor="@color/text_Fc291d"
                    app:tabTextColor="@color/color_999999">

                </android.support.design.widget.TabLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_main" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/activity_product_detail_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white">

                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <Button
                        android:id="@+id/activity_product_detail_btn"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_click"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</finan.heng.com.apps.utils.SlidingFrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/main_home_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_home_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/homered"/>

        <TextView
            android:textColor="@color/text_Fc291d"
            android:id="@+id/main_home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textSize="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_licai_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_licai_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/managemoney2gray"/>

        <TextView
            android:textColor="@color/gray_969ba5"
            android:id="@+id/main_licai_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="理财"
            android:textSize="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_my_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_my_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/personage2gray"/>

        <TextView
            android:textColor="@color/gray_969ba5"
            android:id="@+id/main_my_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="10sp"/>

    </LinearLayout>

</LinearLayout>
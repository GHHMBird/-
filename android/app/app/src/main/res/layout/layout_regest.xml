<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_0.1_dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_cccccc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="@dimen/divide_10_dp">

        <EditText
            android:id="@+id/cet_input_account"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/divide_15_dp"
            android:background="@null"
            android:drawableLeft="@mipmap/zhanghu"
            android:drawablePadding="@dimen/divide_40_dp"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="25dp"
            android:singleLine="true"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/divide_16_dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_0.1_dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="@dimen/divide_10_dp">

        <EditText
            android:id="@+id/cet_input_tupian"
            android:layout_width="@dimen/divide_0_dp"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/divide_15_dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/yanzhengma"
            android:drawablePadding="@dimen/divide_40_dp"
            android:hint="图片验证码"
            android:maxLength="11"
            android:paddingLeft="@dimen/divide_25_dp"
            android:singleLine="true"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/divide_16_dp"/>

        <ImageView
            android:id="@+id/bt_iv_yangzhen"
            android:layout_width="@dimen/divide_100_dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/divide_5_dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_0.1_dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingRight="15dp"
        android:paddingLeft="@dimen/divide_10_dp">

        <EditText
            android:id="@+id/cet_input_yanzhenma"
            android:layout_width="@dimen/divide_0_dp"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/divide_15_dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/yanzhengma"
            android:drawablePadding="@dimen/divide_40_dp"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="@dimen/divide_25_dp"
            android:singleLine="true"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/divide_16_dp"/>

        <TextView
            android:id="@+id/btr_getyanzhengma"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/divide_5_dp"
            android:gravity="center"
            android:background="@color/white"
            android:text="获取验证码"
            android:textColor="@color/text_Fc291d"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_0.1_dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_cccccc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="@dimen/divide_10_dp">

        <EditText
            android:id="@+id/cet_input_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/divide_15_dp"
            android:background="@null"
            android:drawableLeft="@mipmap/mima"
            android:drawablePadding="@dimen/divide_40_dp"
            android:hint="输入密码"
            android:maxLength="16"
            android:paddingLeft="@dimen/divide_25_dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/divide_16_dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_0.1_dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_cccccc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="@dimen/divide_10_dp">

        <EditText
            android:id="@+id/cet_isok_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/divide_15_dp"
            android:background="@null"
            android:drawableLeft="@mipmap/mima"
            android:drawablePadding="@dimen/divide_40_dp"
            android:hint="确认密码"
            android:maxLength="16"
            android:paddingLeft="@dimen/divide_25_dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/divide_16_dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_0.1_dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_cccccc"/>

    <LinearLayout
        android:id="@+id/ll_yanzhengma"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/divide_10_dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/divide_15_dp"
            android:text="推荐码"
            android:textSize="@dimen/divide_16_dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="@dimen/divide_0_dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/divide_10_dp">

            <EditText
                android:id="@+id/cet_tuijian_code"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="@dimen/divide_15_dp"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="请输入推荐码(选填)"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="@dimen/divide_10_dp"
                android:singleLine="true"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/divide_16_dp"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_0.1_dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_cccccc"/>


</LinearLayout>

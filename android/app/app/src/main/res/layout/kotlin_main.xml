<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/kotlin_main_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#efefef" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/kotlin_main_llone"
            android:layout_width="@dimen/divide_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kotlin_main_iv_one"
                android:layout_width="@dimen/divide20_dp"
                android:layout_height="@dimen/divide20_dp"
                android:layout_marginBottom="1dp"
                android:src="@mipmap/tab_homepager_selected" />

            <TextView
                android:id="@+id/kotlin_main_tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/home"
                android:textColor="@color/bg_mainColor"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kotlin_main_lltwo"
            android:layout_width="@dimen/divide_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kotlin_main_iv_two"
                android:layout_width="@dimen/divide20_dp"
                android:layout_height="@dimen/divide20_dp"
                android:layout_marginBottom="1dp"
                android:src="@mipmap/tab_licai_normal" />

            <TextView
                android:id="@+id/kotlin_main_tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/assets"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kotlin_main_llthree"
            android:layout_width="@dimen/divide_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kotlin_main_iv_three"
                android:layout_width="@dimen/divide20_dp"
                android:layout_height="@dimen/divide20_dp"
                android:layout_marginBottom="1dp"
                android:src="@mipmap/tab_assets_normal" />

            <TextView
                android:id="@+id/kotlin_main_tv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/manage"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kotlin_main_llfour"
            android:layout_width="@dimen/divide_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kotlin_main_iv_four"
                android:layout_width="@dimen/divide20_dp"
                android:layout_height="@dimen/divide20_dp"
                android:layout_marginBottom="1dp"
                android:src="@mipmap/tab_my_normal" />

            <TextView
                android:id="@+id/kotlin_main_tv_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/my"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>